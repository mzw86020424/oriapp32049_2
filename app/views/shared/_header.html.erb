<header>
  <div class="container-fluid sticky-top">
    <nav class="navbar navbar-dark bg-dark fixed-top d-flex justify-content-around">
      <a href="#" class="navbar-brand ">
        <%# <img src="" /> %>
        <%= link_to "〇〇〇〇", root_path %>
      </a>
        <span class="navbar-text"><%=@zine.year %>年<%=@zine.month %>月号</span>
      <div class="header-nav-item mr-auto">
        <%= image_tag current_user.image, class: 'header-avatar' %>
      </div>
      <div class="form-inline mr-3">
        <%= form_with model: @post, local: true do |f| %>
          <%= f.text_field :url, class: 'form-control mr-1', placeholder: 'URL' %>
          <%= f.submit '保存', class: 'btn btn-secondary' %>
        <% end %>
      </div>
      <button class="navbar-toggler" type="button"
      data-toggle="collapse"
      data-target="#navmenu1"
      aria-controls="navmenu1"
      aria-expanded="false"
      aria-label="Toggle navigation">
       <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navmenu1">
        <div class="navbar-nav">
          <%= link_to "一覧", zines_path, class: "nav-item nav-link"%>
          <%= link_to "", "#", class: "nav-item nav-link"%>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-item nav-link"%>
        </div>
      </div>
    </nav>
  </div>

</header>